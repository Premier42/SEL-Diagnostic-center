# Application Configuration
APP_NAME="SEL Diagnostic Center"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=pathology_lab
DB_USER=root
DB_PASS=

# Session Configuration
SESSION_LIFETIME=7200
SESSION_NAME=sel_session

# Security
CSRF_TOKEN_NAME=csrf_token
PASSWORD_MIN_LENGTH=6

# Features
ENABLE_SMS=true
ENABLE_EMAIL=false
ENABLE_AUDIT=true

# SMS Configuration (SMS.NET.BD - Free credits on signup)
# Get your API key from: https://sms.net.bd/signup/
SMS_PROVIDER=smsnetbd
SMS_API_KEY=your_api_key_here
SMS_COUNTRY_CODE=+880

# File Upload
MAX_UPLOAD_SIZE=10M
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Timezone
TIMEZONE=Asia/Dhaka
CURRENCY_SYMBOL=à§³
DATE_FORMAT=d/m/Y